mixin button(text, classnames, type='button')
  button.button(class=classnames, type= type)= text
    block

mixin input(placeholder, name, classnames, type="text", required=false)
  .input
    input.input__input(class=classnames, type=type, name=name, placeholder=placeholder, required=required)
    block

mixin select(name, classnames)
  select.select(class=classnames, name=name)
    block

mixin svg(width, height, name, className)
  svg(width=width height=height class=className)
    use(xlink:href="#icon-" + name)
