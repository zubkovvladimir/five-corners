.cart-form
  h2.cart-form__title.title.--large Корзина

  .cart-form__login
    p.login Есть аккаунт?
      +button('Войти', '--link')

  form(action="" method="method")
    .cart-form__container

      .cart-form__item
        +input('', 'address', '--full-width js-input')
          span.input__placeholder Адрес
      .map
        p.map__total Итог:
          span.map__sum 3790 руб.
      .cart-form__item
        +input('', 'name',  'js-input')
          span.input__placeholder Ваше Имя
      .cart-form__item
        +input('', 'phone',  'js-input')
          span.input__placeholder Ваш Телефон
      .cart-form__item
        +input('', 'email', '--full-width js-input', 'email')
          span.input__placeholder Ваше Email
      .cart-form__item
        .select
          select.select__select.--full-width
            option
            option(value="without") Без упаковки
            option(value="standard") Стандартная
            option(value="gift") Подарочная
          span.select__placeholder Тип упаковки
      .cart-form__item
        +input('', 'comment', '--full-width js-input')
          span.input__placeholder Введите комментарий

      .selected-products
        h2.selected-products__title.title Выбранные товары:
        include ./products-list

      p.cart-form__total
        span Итог:
        span.cart-form-total__sum 3790 руб.

      +button('Купить', 'submit')

